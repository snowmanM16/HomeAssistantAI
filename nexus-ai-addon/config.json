{
  "name": "Nexus AI",
  "version": "0.1.0",
  "slug": "nexus_ai",
  "description": "Intelligent AI assistant with memory and smart home control for Home Assistant",
  "url": "https://github.com/yourusername/nexus-ai-addon",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "options": {
    "openai_api_key": "",
    "voice_enabled": false,
    "google_calendar_enabled": false
  },
  "schema": {
    "openai_api_key": "str",
    "voice_enabled": "bool",
    "google_calendar_enabled": "bool"
  },
  "ports": {
    "5000/tcp": 5000
  },
  "ports_description": {
    "5000/tcp": "Web interface (Not required for Ingress)"
  },
  "ingress": true,
  "ingress_port": 5000,
  "panel_icon": "mdi:robot",
  "panel_title": "Nexus AI",
  "webui": "http://[HOST]:[PORT:5000]/",
  "homeassistant_api": true,
  "hassio_api": true,
  "hassio_role": "default",
  "auth_api": true,
  "host_network": false,
  "map": ["ssl", "config:rw"],
  "environment": {
    "LOG_LEVEL": "info",
    "DATA_DIR": "/data"
  },
  "services": ["mysql:want", "postgresql:want"],
  "init": false
}
